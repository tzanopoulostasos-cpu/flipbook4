    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 24px;
    padding: 20px;
    box-sizing: border-box;
    transition: left 0.5s;
}
